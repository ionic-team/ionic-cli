{
  "name": "@ionic/cli-plugin-ionic-angular",
  "version": "1.0.0-rc.2",
  "description": "Ionic CLI build plugin for Ionic Angular projects",
  "homepage": "https://ionic.io/",
  "author": "Ionic Team <hi@ionic.io> (http://ionic.io)",
  "main": "./dist/index.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "lint": "tslint -c ../../tslint.json \"src/**/*.ts\"",
    "build": "npm run clean && npm run build-ts && npm run build-js",
    "build-ts": "tsc",
    "build-js": "npm run -s script-prepublish",
    "watch": "npm run clean && concurrently -p \"{name} \" -n \"TS,JS\" -c \"cyan.bold,yellow.dim\" \"npm run watch-ts\" \"npm run watch-js\"",
    "watch-ts": "tsc -w",
    "watch-js": "cross-env IONIC_PREPUBLISH_PLUGIN_VERSION=${npm_package_version}-local npm run watch-js-chokidar",
    "watch-js-chokidar": "chokidar --silent \"dist/**/*.js\" -c \"npm run build-js\"",
    "script-prepublish": "node ../../scripts/prepublish.js cli-utils",
    "test": "jest",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/driftyco/ionic-cli.git"
  },
  "bugs": {
    "url": "https://github.com/driftyco/ionic-cli/issues"
  },
  "files": [
    "dist/"
  ],
  "license": "MIT",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      ".(ts)": "<rootDir>/../../node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.(ts|js)$",
    "setupFiles": [],
    "testResultsProcessor": "<rootDir>/../../node_modules/ts-jest/coverageprocessor.js"
  },
  "dependencies": {
    "@ionic/cli-utils": "1.0.0-rc.2",
    "chalk": "^1.1.3"
  },
  "devDependencies": {
    "@angular/compiler": "^4.0.0",
    "@angular/compiler-cli": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@types/chalk": "^0.4.31",
    "@types/clean-css": "^3.4.30",
    "rxjs": "^5.2.0",
    "chokidar-cli": "^1.2.0",
    "concurrently": "^3.4.0",
    "cross-env": "^4.0.0",
    "jest": "^19.0.2",
    "jest-cli": "^19.0.2",
    "tslint": "^4.0.0-dev.0",
    "tslint-ionic-rules": "^0.0.8",
    "typescript": "^2.3.1"
  },
  "peerDependencies": {
    "@ionic/app-scripts": "^1.3.1"
  }
}
