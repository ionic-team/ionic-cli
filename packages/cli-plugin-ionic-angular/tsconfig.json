{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "strictNullChecks": false,
    "target": "es6",
    "lib": [
      "es2017.object",
      "es2016",
      "dom"
    ],
    "typeRoots": [
      "../../node_modules/@types"
    ]
  },
  "include": [
    "../../types/index.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/__tests__/*.ts"
  ]
}
