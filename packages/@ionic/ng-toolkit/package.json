    "tslib": "^1.9.0"
  },
  "devDependencies": {
    "@types/debug": "0.0.30",
    "@types/node": "^9.6.18",
    "rimraf": "^2.6.2",
    "tslint": "^5.9.1",
    "typescript": "~2.8.1"
  }
