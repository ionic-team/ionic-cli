{
  "private": true,
  "scripts": {
    "bootstrap": "npm run cli-utils:setup && npm run cli-plugin-ionic-angular:setup && lerna bootstrap && npm run build",
    "cli-utils:setup": "cd packages/cli-utils && npm install && npm run build",
    "cli-plugin-ionic-angular:setup": "cd packages/cli-plugin-ionic-angular && npm install @ionic/app-scripts",
    "lint": "tslint -c tslint.json 'packages/*/src/**/*.ts' 'scripts/**/*.ts'",
    "build": "tsc",
    "watch": "tsc -w",
    "docs": "node ./scripts/createMarkdownDocs.js",
    "publish:canary": "lerna publish --canary --exact --npm-tag canary",
    "publish:beta": "lerna publish --exact --npm-tag beta",
    "publish:rc": "lerna publish --exact --npm-tag beta",
    "publish:ci": "npm run publish:canary -- --yes",
    "prepush": "npm run lint"
  },
  "devDependencies": {
    "@types/node": "^6.0.68",
    "awesome-typescript-loader": "^3.1.2",
    "chokidar-cli": "^1.2.0",
    "concurrently": "^3.4.0",
    "coveralls": "^2.2.0",
    "cross-env": "^4.0.0",
    "eslint-config-ionic": "0.0.2",
    "husky": "^0.13.3",
    "jest": "^19.0.2",
    "jest-cli": "^19.0.2",
    "lerna": "2.0.0-beta.38",
    "replace": "^0.3.0",
    "ts-jest": "^19.0.7",
    "tslint": "^4.0.0-dev.0",
    "tslint-ionic-rules": "^0.0.8",
    "typescript": "^2.3.1"
  }
}
